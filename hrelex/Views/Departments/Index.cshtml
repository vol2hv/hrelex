@model IEnumerable<hrelex.Models.Department>

@{
    ViewBag.Title = "Отделы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список отделов</h2>

<p>
    @Html.ActionLink("Новая строка", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.DepartmentName }) |
            
            @Html.ActionLink("Удалить", "Delete", new { id=item.DepartmentName })
        </td>
    </tr>
}

</table>
